<div id="<%= dom_id post %>"
  <p>
  <strong>Title:</strong>
  <%= post.title %>
  </p>

  <p>
  <strong>Body:</strong>
  <%= post.body %>
  </p>

  <p>
  <strong>Published at:</strong>
  <%= post.published_at %>
  </p>

  <%= link_to 'Edit', edit_post_path(post) %> |
  <%= link_to 'Back', posts_path %>
</div>
